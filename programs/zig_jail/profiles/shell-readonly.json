{
  "profile_name": "shell-readonly",
  "description": "Read-only interactive shell - can execute commands and read files, but cannot modify filesystem or network",
  "version": "1.0.0",
  "author": "Zig Guardian Forge",
  "threat_model": "Potentially destructive shell session - allows exploration without modification risk",

  "syscalls": {
    "default_action": "errno",
    "comment": "Default to EPERM (errno 13) instead of kill - allows shell to continue on blocked operations",
    "errno_value": 13,

    "allowed": [
      "read",
      "write",
      "pread64",
      "pwrite64",
      "readv",
      "writev",
      "preadv",
      "pwritev",
      "preadv2",
      "pwritev2",
      "open",
      "openat",
      "close",
      "stat",
      "fstat",
      "lstat",
      "newfstatat",
      "statx",
      "access",
      "faccessat",
      "faccessat2",
      "readlink",
      "readlinkat",
      "llistxattr",
      "getcwd",
      "chdir",
      "fchdir",
      "getdents",
      "getdents64",
      "lseek",
      "dup",
      "dup2",
      "dup3",
      "pipe",
      "pipe2",
      "ioctl",
      "fcntl",
      "getrlimit",
      "prlimit64",
      "getrusage",
      "gettimeofday",
      "clock_gettime",
      "clock_getres",
      "nanosleep",
      "time",
      "times",
      "getpid",
      "gettid",
      "getppid",
      "getuid",
      "geteuid",
      "getgid",
      "getegid",
      "getgroups",
      "getresuid",
      "getresgid",
      "getpgid",
      "setpgid",
      "getpgrp",
      "setsid",
      "getsid",
      "getpriority",
      "setpriority",
      "prctl",
      "arch_prctl",
      "mmap",
      "munmap",
      "mremap",
      "mprotect",
      "madvise",
      "brk",
      "mincore",
      "rt_sigaction",
      "rt_sigprocmask",
      "rt_sigreturn",
      "rt_sigpending",
      "sigaltstack",
      "uname",
      "getrandom",
      "sysinfo",
      "futex",
      "set_tid_address",
      "set_robust_list",
      "get_robust_list",
      "exit",
      "exit_group",
      "wait4",
      "waitid",
      "waitpid",
      "poll",
      "ppoll",
      "select",
      "pselect6",
      "epoll_create",
      "epoll_create1",
      "epoll_ctl",
      "epoll_wait",
      "epoll_pwait",
      "epoll_pwait2",
      "clone",
      "clone3",
      "fork",
      "vfork",
      "execve",
      "execveat",
      "sched_yield",
      "sched_getaffinity",
      "sched_getparam",
      "sched_getscheduler",
      "restart_syscall",
      "rseq"
    ],

    "blocked": [
      "unlink",
      "unlinkat",
      "rmdir",
      "rename",
      "renameat",
      "renameat2",
      "link",
      "linkat",
      "symlink",
      "symlinkat",
      "mkdir",
      "mkdirat",
      "mknod",
      "mknodat",
      "chmod",
      "fchmod",
      "fchmodat",
      "chown",
      "fchown",
      "lchown",
      "fchownat",
      "truncate",
      "ftruncate",
      "fsync",
      "fdatasync",
      "sync",
      "syncfs",
      "flock",
      "mount",
      "umount",
      "umount2",
      "pivot_root",
      "chroot",
      "acct",
      "swapon",
      "swapoff",
      "reboot",
      "kexec_load",
      "kexec_file_load",
      "init_module",
      "finit_module",
      "delete_module",
      "iopl",
      "ioperm",
      "quotactl",
      "bpf",
      "userfaultfd",
      "perf_event_open",
      "ptrace",
      "process_vm_writev",
      "socket",
      "socketpair",
      "bind",
      "listen",
      "accept",
      "accept4",
      "connect",
      "sendto",
      "sendmsg",
      "sendmmsg",
      "shutdown",
      "setsockopt"
    ],

    "conditional": [
      {
        "comment": "Block any open() with write flags - this is the critical control",
        "syscall": "open",
        "rules": [
          {
            "description": "Block O_WRONLY|O_RDWR|O_CREAT|O_TRUNC|O_APPEND - no write operations",
            "arg": 1,
            "op": "masked_eq",
            "mask": "O_WRONLY|O_RDWR|O_CREAT|O_TRUNC|O_APPEND",
            "action_if_match": "errno",
            "errno": 13
          }
        ]
      },
      {
        "comment": "Block any openat() with write flags",
        "syscall": "openat",
        "rules": [
          {
            "description": "Block O_WRONLY|O_RDWR|O_CREAT|O_TRUNC|O_APPEND - no write operations",
            "arg": 2,
            "op": "masked_eq",
            "mask": "O_WRONLY|O_RDWR|O_CREAT|O_TRUNC|O_APPEND",
            "action_if_match": "errno",
            "errno": 13
          }
        ]
      }
    ]
  },

  "capabilities": {
    "comment": "Drop all capabilities - truly unprivileged shell",
    "drop_all": true,
    "keep": []
  },

  "namespaces": {
    "comment": "No namespace isolation - allow interaction with host system (read-only)",
    "enabled": [],
    "network": "none"
  },

  "filesystem": {
    "comment": "All paths are read-only via syscall blocking, no explicit path restrictions needed",
    "protected_paths": ["*"],
    "writable_sandbox": []
  },

  "limits": {
    "max_open_files": 1024,
    "max_memory_mb": 512,
    "max_cpu_time_sec": 3600,
    "max_processes": 256
  },

  "audit": {
    "log_violations": true,
    "log_allowed": false,
    "log_target": "stderr",
    "auditd_integration": true,
    "auditd_key": "zig_jail_shell_readonly"
  },

  "metadata": {
    "created": "2025-10-06",
    "tested_with": ["bash 5.x", "zsh 5.x", "fish 3.x"],
    "use_cases": [
      "Safe system exploration without modification risk",
      "Read-only access for untrusted users",
      "Forensic analysis where evidence must not be modified",
      "Learning environment for shell commands",
      "Automated log analysis scripts"
    ],
    "known_limitations": [
      "Cannot write to ANY file (including /tmp/)",
      "Cannot create files or directories",
      "Cannot delete or rename anything",
      "Cannot use network tools (nc, curl, wget) - socket syscalls blocked",
      "Shell history will not be saved (cannot write ~/.bash_history)",
      "Tab completion may be degraded (some shells write temp files)"
    ],
    "usage_examples": [
      "zig-jail --profile=shell-readonly -- bash",
      "zig-jail --profile=shell-readonly -- zsh -c 'ls -la /etc | grep passwd'",
      "zig-jail --profile=shell-readonly -- fish"
    ]
  }
}
