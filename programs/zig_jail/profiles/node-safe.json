{
  "profile_name": "node-safe",
  "description": "Secure Node.js execution - read-only system, write to sandbox only, no network, no child processes",
  "version": "1.0.0",
  "author": "Zig Guardian Forge",
  "threat_model": "Untrusted Node.js scripts (npm packages with unknown security, AI-generated code)",

  "syscalls": {
    "default_action": "kill",
    "comment": "Default to SECCOMP_RET_KILL - stricter than Python due to Node.js ecosystem risks",

    "allowed": [
      "read",
      "write",
      "open",
      "openat",
      "close",
      "stat",
      "fstat",
      "lstat",
      "newfstatat",
      "access",
      "faccessat",
      "faccessat2",
      "readlink",
      "readlinkat",
      "getcwd",
      "chdir",
      "fchdir",
      "getdents",
      "getdents64",
      "lseek",
      "dup",
      "dup2",
      "dup3",
      "pipe",
      "pipe2",
      "ioctl",
      "fcntl",
      "flock",
      "fsync",
      "fdatasync",
      "getrlimit",
      "setrlimit",
      "prlimit64",
      "getrusage",
      "umask",
      "gettimeofday",
      "clock_gettime",
      "clock_getres",
      "clock_nanosleep",
      "nanosleep",
      "time",
      "times",
      "getpid",
      "gettid",
      "getppid",
      "getuid",
      "geteuid",
      "getgid",
      "getegid",
      "getgroups",
      "getresuid",
      "getresgid",
      "getpgid",
      "setpgid",
      "getpgrp",
      "getsid",
      "prctl",
      "arch_prctl",
      "mmap",
      "munmap",
      "mremap",
      "mprotect",
      "madvise",
      "brk",
      "mlock",
      "munlock",
      "mincore",
      "msync",
      "rt_sigaction",
      "rt_sigprocmask",
      "rt_sigreturn",
      "rt_sigpending",
      "rt_sigtimedwait",
      "sigaltstack",
      "uname",
      "getrandom",
      "sysinfo",
      "futex",
      "set_tid_address",
      "set_robust_list",
      "get_robust_list",
      "exit",
      "exit_group",
      "wait4",
      "waitid",
      "poll",
      "ppoll",
      "select",
      "pselect6",
      "epoll_create",
      "epoll_create1",
      "epoll_ctl",
      "epoll_wait",
      "epoll_pwait",
      "epoll_pwait2",
      "eventfd",
      "eventfd2",
      "signalfd",
      "signalfd4",
      "timerfd_create",
      "timerfd_settime",
      "timerfd_gettime",
      "clone",
      "clone3",
      "sched_yield",
      "sched_getaffinity",
      "sched_setaffinity",
      "restart_syscall",
      "pread64",
      "pwrite64",
      "readv",
      "writev",
      "preadv",
      "pwritev",
      "preadv2",
      "pwritev2",
      "sendfile",
      "copy_file_range",
      "statx",
      "rseq"
    ],

    "blocked": [
      "unlink",
      "unlinkat",
      "rmdir",
      "rename",
      "renameat",
      "renameat2",
      "link",
      "linkat",
      "symlink",
      "symlinkat",
      "mkdir",
      "mkdirat",
      "mknod",
      "mknodat",
      "chmod",
      "fchmod",
      "fchmodat",
      "chown",
      "fchown",
      "lchown",
      "fchownat",
      "mount",
      "umount",
      "umount2",
      "pivot_root",
      "chroot",
      "acct",
      "swapon",
      "swapoff",
      "reboot",
      "kexec_load",
      "kexec_file_load",
      "init_module",
      "finit_module",
      "delete_module",
      "iopl",
      "ioperm",
      "quotactl",
      "bpf",
      "userfaultfd",
      "perf_event_open",
      "ptrace",
      "process_vm_readv",
      "process_vm_writev",
      "kcmp",
      "personality",
      "socket",
      "socketpair",
      "bind",
      "listen",
      "accept",
      "accept4",
      "connect",
      "getsockname",
      "getpeername",
      "sendto",
      "recvfrom",
      "sendmsg",
      "recvmsg",
      "sendmmsg",
      "recvmmsg",
      "shutdown",
      "setsockopt",
      "getsockopt",
      "execve",
      "execveat",
      "fork",
      "vfork"
    ],

    "conditional": [
      {
        "comment": "Block write operations on protected system paths",
        "syscall": "open",
        "rules": [
          {
            "description": "Block O_WRONLY|O_RDWR|O_CREAT|O_TRUNC on system directories",
            "arg": 1,
            "op": "masked_eq",
            "mask": "O_WRONLY|O_RDWR|O_CREAT|O_TRUNC",
            "action_if_match": "check_path",
            "paths_blocked": ["/etc/", "/boot/", "/sys/", "/proc/sys/", "/usr/", "/lib/", "/lib64/", "/bin/", "/sbin/", "/opt/"]
          }
        ]
      },
      {
        "comment": "Block write operations on protected system paths (openat variant)",
        "syscall": "openat",
        "rules": [
          {
            "description": "Block O_WRONLY|O_RDWR|O_CREAT|O_TRUNC on system directories",
            "arg": 2,
            "op": "masked_eq",
            "mask": "O_WRONLY|O_RDWR|O_CREAT|O_TRUNC",
            "action_if_match": "check_path",
            "paths_blocked": ["/etc/", "/boot/", "/sys/", "/proc/sys/", "/usr/", "/lib/", "/lib64/", "/bin/", "/sbin/", "/opt/"]
          }
        ]
      }
    ]
  },

  "capabilities": {
    "comment": "Drop all Linux capabilities",
    "drop_all": true,
    "keep": []
  },

  "namespaces": {
    "comment": "Future: Network namespace isolation",
    "enabled": [],
    "network": "none"
  },

  "filesystem": {
    "comment": "Extremely restrictive - Node.js ecosystem is high-risk",
    "protected_paths": [
      "/etc/",
      "/boot/",
      "/sys/",
      "/proc/sys/",
      "/usr/",
      "/lib/",
      "/lib64/",
      "/bin/",
      "/sbin/",
      "/opt/"
    ],
    "writable_sandbox": [
      "/tmp/",
      "/home/founder/sandbox/",
      "/home/founder/tmp/",
      "/var/tmp/"
    ]
  },

  "limits": {
    "max_open_files": 2048,
    "max_memory_mb": 2048,
    "max_cpu_time_sec": 180,
    "max_processes": 64
  },

  "audit": {
    "log_violations": true,
    "log_allowed": false,
    "log_target": "stderr",
    "auditd_integration": true,
    "auditd_key": "zig_jail_node_safe"
  },

  "metadata": {
    "created": "2025-10-06",
    "tested_with": ["Node.js v18.x", "Node.js v20.x"],
    "use_cases": [
      "Running npm packages from unknown sources",
      "Executing AI-generated JavaScript/TypeScript code",
      "Testing potentially malicious npm dependencies",
      "Isolated build processes for untrusted code"
    ],
    "known_limitations": [
      "Cannot use child_process module - fork/execve blocked",
      "Cannot use net/http modules - all socket syscalls blocked",
      "Cannot delete or rename files",
      "Cannot write to system directories",
      "V8 isolates may still work (uses clone, not fork)"
    ]
  }
}
