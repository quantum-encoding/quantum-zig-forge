$ORIGIN example.com.
$TTL 3600

; SOA Record
@       IN SOA  ns1.example.com. admin.example.com. (
                2024010101 ; serial
                3600       ; refresh
                900        ; retry
                604800     ; expire
                86400 )    ; minimum TTL

; Name Servers
@       IN NS   ns1.example.com.
@       IN NS   ns2.example.com.

; Mail Servers
@       IN MX   10 mail.example.com.
@       IN MX   20 mail2.example.com.

; A Records
@       IN A    192.0.2.1
ns1     IN A    192.0.2.2
ns2     IN A    192.0.2.3
mail    IN A    192.0.2.10
mail2   IN A    192.0.2.11
www     IN A    192.0.2.100
ftp     IN A    192.0.2.101
api     IN A    192.0.2.200

; AAAA Records
@       IN AAAA 2001:db8::1
www     IN AAAA 2001:db8::100

; CNAME Records
cdn     IN CNAME www.example.com.
shop    IN CNAME www.example.com.

; TXT Records
@       IN TXT  "v=spf1 mx a ~all"
_dmarc  IN TXT  "v=DMARC1; p=quarantine; rua=mailto:dmarc@example.com"
